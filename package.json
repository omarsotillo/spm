{
  "name": "@omarsotillo/spm",
  "description": "The only package manager you will ever need",
  "homepage": "https://github.com/omarsotillo/spm",
  "version": "0.1.20",
  "main": "dist/index.js",
  "module": "dist/spm.esm.js",
  "bin": {
    "spm": "bin/spm.js"
  },
  "author": {
    "name": "Omar Sotillo Franco"
  },
  "contributors": [
    {
      "name": "Omar Sotillo",
      "email": "omarsotillofranco@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omarsotillo/spm.git"
  },
  "bugs": {
    "url": "https://github.com/omarsotillo/spm/issues"
  },
  "keywords": [
    "bundler",
    "cli",
    "npm",
    "npm",
    "package-managers"
  ],
  "dependencies": {
    "find-up": "^5.0.0",
    "inquirer": "^7.3.3",
    "meow": "^9.0.0",
    "node-fetch": "^2.6.1",
    "simple-pre-commit": "^1.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/inquirer": "^7.3.1",
    "@types/node-fetch": "^2.5.7",
    "ci-publish": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "^2.10.11",
    "git-authors-cli": "^1.0.33",
    "lint-staged": "^10.5.4",
    "npm-check-updates": "^11.1.4",
    "rimraf": "^3.0.2",
    "size-limit": "^4.9.1",
    "standard-version": "^9.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "tsup": "^3.11.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "",
    "contributors": "(git-authors-cli && finepack && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "lint": "tsdx lint",
    "postrelease": "npm run release:tags && npm run release:github && ci-publish",
    "prepare": "rimraf dist && tsup src/index.ts --format esm,cjs --dts",
    "prerelease": "npm run update:check && npm run contributors",
    "release": "standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:main",
    "start": "tsdx watch",
    "test": "tsdx test",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "licenses": [
    {
      "license": "MIT"
    }
  ],
  "lint-staged": {
    "package.json": [
      "finepack"
    ]
  },
  "peerDependencies": {},
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "simple-pre-commit": "npx lint-staged",
  "typings": "dist/index.d.ts"
}
